<h1>Create a Post</h1>

<%= form_for @post do |f| %>

  <div class="form-group">
    <%= f.label :user_id %>
    <% if current_user %>
    <%= f.text_field :user_id, required: true, class: 'form-control', value:current_user.id  %>
    <% else %>
        <%= f.text_field :user_id, required: true, class: 'form-control'%>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, cols: 8, rows: 15, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Create Post", class: 'btn btn-lg btn-warning' %>
  </div>

<% end %>
