  <div class="landing-page">
      <div class="landing-content">
        <h1 class="app-name">Bloggit</h1>
        <h3 class="app-summary">A blogging platform for anyone to blog about any
            subject they love.
        </h3>

        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
              <% if current_user %>
                <%= link_to "Create Post", new_post_path, class: ' btn btn-lg btn-primary' %>
              <% else %>
                <%= link_to "Login", new_user_session_path, class: 'btn btn-lg btn-warning' %>
              <% end %>
            </div>

            <div class="col-md-2"></div>
            <div class="col-md-2"></div>

            <div class="col-md-2">
              <% if current_user %>
                <%= link_to "Logout", destroy_user_session_path, :method => :delete, class: 'btn btn-lg btn-danger' %>
              <% else %>
                <%= link_to "Signup", new_user_registration_path, class: 'btn btn-lg btn-success' %>
              <% end %>
            </div>
            <div class="col-md-2"></div>
        </div>
      </div>
  </div>
